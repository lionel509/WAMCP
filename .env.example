# Redis
REDIS_URL=redis://localhost:6379/0

# MinIO
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_ENDPOINT=localhost:9000
MINIO_BUCKET_DOCUMENTS=documents

# WhatsApp
WHATSAPP_VERIFY_TOKEN=dev-verify-token
